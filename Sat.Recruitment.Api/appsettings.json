{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb);Database=SatRecruitment;Trusted_Connection=True;MultipleActiveResultSets=true",
    "SqliteConnection": "Data Source=..\\Sat.Recruitment.Infrastructure\\Database\\databaseSatRecruitment.sqlite"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
